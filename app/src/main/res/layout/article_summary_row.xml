<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:text="Hamburgesa de Bacon"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivMinus"
        app:layout_constraintStart_toEndOf="@+id/ivImg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRemoveFromCart"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:tint="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_remove_shopping_cart_black_48dp" />

    <ImageView
        android:id="@+id/ivMinus"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:tint="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivPlus"
        app:srcCompat="@drawable/ic_minus_grey600_48dp" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:tint="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivRemoveFromCart"
        app:srcCompat="@drawable/ic_plus_grey600_48dp" />

    <TextView
        android:id="@+id/tvPVP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="tvPVP"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivRemoveFromCart"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_justorder" />

    <TextView
        android:id="@+id/tvUds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:text="uds"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivMinus"
        app:layout_constraintEnd_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:text="uds"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivPlus"
        app:layout_constraintEnd_toStartOf="@+id/ivRemoveFromCart" />

</android.support.constraint.ConstraintLayout>